<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head.ejs") %>
        <title>Profile</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <style>
            body {
                background-color: #121212;
                /* Dark background color */
                color: #ffffff;
                /* White text for contrast */
                font-family: Arial, sans-serif;
                /* Font style */
                overflow-x: hidden;
                /* Prevent horizontal scrolling */
            }

            .profile-intro {
                height: calc(100vh - 56px);
                /* Full height minus navbar height */
                display: flex;
                /* Use flexbox for layout */
                align-items: center;
                /* Center items vertically */
                justify-content: space-between;
                /* Space between text and image */
                padding: 50px;
                background: rgba(0, 0, 0, 0.7);
                /* Dark semi-transparent background */
                animation: slideIn 1s ease-in-out;
                /* Slide-in animation */
            }

            @keyframes slideIn {
                from {
                    transform: translateX(-100%);
                    /* Start off-screen to the left */
                    opacity: 0;
                    /* Start transparent */
                }

                to {
                    transform: translateX(0);
                    /* End at original position */
                    opacity: 1;
                    /* Fully opaque */
                }
            }

            .text-section {
                flex: 1;
                /* Allow text section to take available space */
                margin-right: 30px;
                /* Space between text and image */
                animation: fadeIn 1s ease-in-out;
                /* Fade-in animation for text */
            }

            @keyframes fadeIn {
                from {
                    opacity: 0;
                    /* Start transparent */
                }

                to {
                    opacity: 1;
                    /* Fully opaque */
                }
            }

            .profile-image {
                width: 350px;
                /* Increased width */
                height: 350px;
                /* Increased height */
                border-radius: 50%;
                /* Make image circular */
                object-fit: cover;
                /* Ensure the image covers the frame */
                border: 4px solid #fff;
                /* Optional: white border around the image */
                animation: zoomIn 1s ease-in-out;
                /* Zoom-in animation for image */
            }

            @keyframes zoomIn {
                from {
                    transform: scale(0);
                    /* Start small */
                    opacity: 0;
                    /* Start transparent */
                }

                to {
                    transform: scale(1);
                    /* End at original size */
                    opacity: 1;
                    /* Fully opaque */
                }
            }

            .social-icons {
                margin-top: 20px;
                /* Space above social icons */
            }

            .social-icons a {
                margin: 0 15px;
                /* Space between icons */
                color: #00aced;
                /* Use a blue color for icons */
                font-size: 24px;
                /* Icon size */
                transition: color 0.3s;
                /* Smooth color transition */
            }

            .social-icons a:hover {
                color: #ffffff;
                /* Change color on hover */
            }

            h1,
            h2 {
                margin-bottom: 15px;
                /* Space below headings */
            }

            /* Typing animation */
            .typing {
                border-right: 2px solid #00aced;
                /* Cursor effect */
                white-space: pre-wrap;
                /* Allow line breaks */
                overflow: hidden;
                /* Hide the rest of the text */
                animation: typing 4s steps(40, end), blink-caret .75s step-end infinite;
                /* Typing animation */
            }

            @keyframes typing {
                from {
                    width: 0;
                    /* Start hidden */
                }

                to {
                    width: 100%;
                    /* Reveal text */
                }
            }

            @keyframes blink-caret {

                from,
                to {
                    border-color: transparent;
                    /* Invisible caret */
                }

                50% {
                    border-color: #00aced;
                    /* Caret color */
                }
            }
        </style>
</head>

<body>


    <div class="container-fluid">
        <div class="profile-intro">
            <div class="text-section">
                <h1>Welcome to My Profile</h1>
                <h2>Tech Enthusiast & Software Engineer</h2>
                <p class="typing" id="description"></p>
                <div class="social-icons">
                    <a href="https://facebook.com" target="_blank" title="Facebook"><i class="fab fa-facebook"></i></a>
                    <a href="https://twitter.com" target="_blank" title="Twitter"><i class="fab fa-twitter"></i></a>
                    <a href="https://linkedin.com" target="_blank" title="LinkedIn"><i class="fab fa-linkedin"></i></a>
                    <a href="https://github.com" target="_blank" title="GitHub"><i class="fab fa-github"></i></a>
                    <a href="https://instagram.com" target="_blank" title="Instagram"><i
                            class="fab fa-instagram"></i></a>
                </div>
            </div>
            <img src="https://i.postimg.cc/JnRtLWWL/460622072-2208479119529236-7053530482087649497-n.jpg"
                alt="Profile Image" class="profile-image">
        </div>
    </div>

    <%- include("../partials/script.ejs") %>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // Live typing effect for the description
            const descriptionText = "I am passionate about developing innovative software solutions...";
            const descriptionArray = descriptionText.split('. ');
            const descriptionElement = document.getElementById('description');
            let index = 0;

            function type() {
                if (index < descriptionArray.length) {
                    const sentence = descriptionArray[index];
                    descriptionElement.innerHTML += sentence + (index < descriptionArray.length - 1 ? '.<br>' : '');
                    index++;
                    setTimeout(type, 1500);
                }
            }
            type();
        </script>
</body>

</html>
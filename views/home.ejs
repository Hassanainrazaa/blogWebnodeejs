<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head.ejs") %>
        <title>Homepage</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                font-family: 'Courier New', Courier, monospace;
                background-color: #121212;
                color: #fff;
                overflow-x: hidden;
            }

            .card-container {
                perspective: 1000px;
                margin: 20px;
            }

            .card {
                position: relative;
                width: 400px;
                height: 400px;
                overflow: hidden;
                border-radius: 15px;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
                transition: transform 0.3s ease;
                background-color: rgba(255, 255, 255, 0.1);
            }

            .card img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.3s ease;
            }

            .caption {
                position: absolute;
                bottom: -100%;
                left: 0;
                right: 0;
                background-color: rgba(0, 0, 0, 0.7);
                color: #fff;
                padding: 15px;
                border-radius: 15px;
                transition: bottom 0.3s ease;
                text-align: center;
            }

            .card:hover {
                transform: translateY(-10px) scale(1.05);
                box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
            }

            .card:hover img {
                transform: scale(1.1);
            }

            .card:hover .caption {
                bottom: 0;
            }

            .carousel-item {
                display: flex;
                justify-content: center;
                padding: 20px;
            }

            .carousel {
                animation: fadeIn 0.5s ease;
            }

            @keyframes fadeIn {
                from {
                    opacity: 0;
                }

                to {
                    opacity: 1;
                }
            }
        </style>
</head>

<body>
    <%- include("partials/navbar.ejs") %>
        <%- include("partials/profilefield.ejs") %>

            <!-- Blog Section -->
            <h1 class="text-center"
                style="font-family: 'Roboto', sans-serif; font-weight: 700; color: #fff; margin-bottom: 30px;">
                My Daily BLOGS
            </h1>

            <div id="blogCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
                <div class="carousel-inner">
                    <% let isActive=true; %>
                        <% for (let i=0; i < blogs.length; i +=3) { %>
                            <div class="carousel-item <%= isActive ? 'active' : '' %>">
                                <div class="row row-cols-1 row-cols-md-3 g-4">
                                    <% for (let j=0; j < 3 && i + j < blogs.length; j++) { %>
                                        <div class="col d-flex justify-content-center">
                                            <div class="card-container">
                                                <div class="card">
                                                    <img src="<%= blogs[i + j].coverImageURL %>" class="card-img-top"
                                                        alt="Cover image">
                                                    <div class="caption">
                                                        <h5 class="card-title">
                                                            <%= blogs[i + j].title %>
                                                        </h5>
                                                        <p class="card-text">
                                                            <%= blogs[i + j].body.substring(0, 100) %>...
                                                        </p>
                                                        <a href="/blog/<%= blogs[i + j]._id %>"
                                                            class="btn btn-primary">Read More</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                            <% isActive=false; %>
                                <% } %>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#blogCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#blogCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

            <!-- Projects Section -->
            <h1 class="text-center"
                style="font-family: 'Roboto', sans-serif; font-weight: 700; color: #fff; margin-top: 50px; margin-bottom: 30px;">
                My Projects
            </h1>

            <div id="projectCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
                <div class="carousel-inner">
                    <% let isProjectActive=true; %>
                        <% for (let i=0; i < projects.length; i +=3) { %>
                            <div class="carousel-item <%= isProjectActive ? 'active' : '' %>">
                                <div class="d-flex justify-content-center">
                                    <% for (let j=0; j < 3 && i + j < projects.length; j++) { %>
                                        <div class="card-container mx-3">
                                            <div class="card" style="width: 350px; height: 350px;">
                                                <img src="<%= projects[i + j].projectImage1 %>" class="card-img-top"
                                                    alt="Project image">
                                                <div class="caption">
                                                    <h5 class="card-title">
                                                        <%= projects[i + j].title %>
                                                    </h5>
                                                    <p class="card-text">
                                                        <%= projects[i + j].description.substring(0, 100) %>...
                                                    </p>
                                                    <a href="/project/<%= projects[i + j]._id %>"
                                                        class="btn btn-primary">View Project</a>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                            <% isProjectActive=false; %>
                                <% } %>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#projectCarousel"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#projectCarousel"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

            <%- include("partials/script.ejs") %>
</body>

</html>